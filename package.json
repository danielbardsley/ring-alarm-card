{
  "name": "ring-alarm-card",
  "version": "0.1.0",
  "description": "A custom Home Assistant Lovelace card for Ring alarm systems built with Lit",
  "main": "ring-alarm-card.js",
  "module": "ring-alarm-card.js",
  "type": "module",
  "scripts": {
    "start": "web-dev-server --config config/web-dev-server.config.mjs",
    "build": "rollup -c config/rollup.config.mjs",
    "build:dev": "rollup -c config/rollup.config.mjs --environment BUILD:development",
    "build:commit": "npm run build && git add ring-alarm-card.js* && git diff --staged --quiet || git commit -m 'chore: update built files'",
    "watch": "rollup -c config/rollup.config.mjs --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:property": "jest --testNamePattern='Property'",
    "prepare": "husky",
    "release": "npm run build && npm run test && npm run lint",
    "version": "npm run release && git add -A",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "home-assistant",
    "lovelace",
    "custom-card",
    "ring",
    "alarm",
    "lit",
    "web-components"
  ],
  "author": "Ring Alarm Card Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/ring-alarm-card.git"
  },
  "bugs": {
    "url": "https://github.com/username/ring-alarm-card/issues"
  },
  "homepage": "https://github.com/username/ring-alarm-card#readme",
  "license": "MIT",
  "dependencies": {
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@web/dev-server": "^0.4.1",
    "@web/dev-server-rollup": "^0.6.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-lit": "^1.11.0",
    "fast-check": "^3.15.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.4",
    "rollup": "^4.9.6",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  }
}
